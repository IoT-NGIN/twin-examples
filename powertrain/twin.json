actions:
  plc_measurement:
    input:
      type: object
      properties:
        start_measurement:
          type: boolean
          const: true
    output:
      type: string
    forms:
      href: http://172.21.0.11:1880/plc/start_measurement
      op: invokeaction
      htv:methodName: POST
      contentType: application/json
events:
  heatcam:
    data:
      description: Thermal data from heatcamera. json Array of integers. Can be
        visualised in a 24x32 heatmap grid.
      type: object
      properties:
        topic:
          type: string
        payload:
          type: object
          properties:
            data:
              type: array
              items:
                type: number
              minItems: 768
              maxItems: 768
        qos:
          type: number
        retain:
          type: boolean
    forms:
      - href: mqtt://172.21.0.11:1883/HeatCam
        contentType: application/json
        op: subscribeevent
  drive_signals:
    data:
      type: object
      properties:
        payload:
          type: array
          items:
            type: object
            properties:
              objectId:
                type: string
              model:
                type: string
              variable:
                type: string
              timestamp:
                type: string
                format: date-time
              value:
                type: number
              unit:
                type: string
    forms:
      - href: ws://172.21.0.11:1880/ws/drive_panel
        contentType: application/json
        op: observeproperty
